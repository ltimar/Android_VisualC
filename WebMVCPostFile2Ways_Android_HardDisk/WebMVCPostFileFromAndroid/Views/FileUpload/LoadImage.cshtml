@model WebMVCHttpPostFile.TestImage

@{
    ViewBag.Title = "LoadImage";
}

<h2>Load Image Page</h2>

<div>
    Sent the image file from Android and
    check if it is saved in Monitor folder and in DB. <br/> <br/>

  <!--
      <img src="~/Monitor/first.jpg" alt="Sample Image" width="300px" />
  -->  
</div>

@using (Html.BeginForm("LoadImage", "FileUpload", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>FileUploadModel</h4>
        <hr />


        <img src="@ViewBag.localPath/@Model.ImageName" alt="Sample Image" />  

   @*     <img src="~/Monitor/00123456/@Model.ImageName" alt="Sample Image"  />  *@ 
   @*  <img src="@LOCAL_PATH /@Model.ImageName" alt="Sample Image" />      *@   


   @* <img src="@Url.Content("~"+ Model.LocalPath + "/" + Model.ImageName)" alt="Image" />   *@   
      
                     
   @* @{  var imagePath = Model.LocalPath+"/"+Model.ImageName; }
    <img src="@imagePath" alt=@Model.ImageName width="300" />       *@  
            
      
        <br/>
        @Model.ImageName
        

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

     <div class="form-group" style="padding : 15px 15px 15px 15px">  
            <div class="col-md-10">
                @*afiseaza numele fisierului, sub imagine*@
                @Html.LabelFor(model => model.ImageName, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ImageName, new { htmlAttributes = new { @class = "form-control", @type = "file", @name = "theFile" } })
                @Html.ValidationMessageFor(model => model.ImageName, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-offset-2 col-md-10" style="padding : 15px 15px 15px 15px">
                <form method="post" action="LoadImage">
                    <input type="submit" value="LoadAnImagefromDisk" class="btn btn-primary" />
                </form>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 col-md-10 text-success">
                @ViewBag.FileStatus
            </div>
        </div>
    </div>
}

   
<div>
    Good luck!
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

